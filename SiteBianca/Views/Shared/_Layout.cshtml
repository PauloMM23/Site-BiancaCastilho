<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Bianca Castilho</title>

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #0c244c;
            background-image: url('/images/balanca-de-justica.png'); /* Caminho relativo */
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: 900px;
            color: white;
            font-family: 'Inter', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
        }

        header {
            background-color: #08306b;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
            color: white;
        }

            .navbar-brand:hover {
                color: #d3e7ff;
                text-decoration: none;
            }

        .navbar-nav {
            margin-left: auto;
        }

        .nav-link {
            color: white;
            font-weight: 500;
            margin-left: 1rem;
            transition: color 0.3s ease;
        }

            .nav-link:hover, .nav-link.active {
                color: #e6f0ff;
                text-decoration: underline;
            }

        footer {
            background-color: #06203a;
            color: #cfd9ef;
            text-align: center;
            padding: 1rem 0;
            margin-top: auto;
            font-size: 0.9rem;
        }

        a, a:hover {
            color: #aad4ff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm container justify-content-center">
            <a class="navbar-brand mx-auto text-center" href="/">Advogada Bianca Castilho</a>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Bianca Castilho. OAB: 138.218/RS. Todos os direitos reservados.</p>
    </footer>

    @RenderSection("Scripts", required: false)

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
